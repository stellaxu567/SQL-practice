#1 Modify it to show the matchid and player name for all goals scored by Germany.
SELECT matchid, player name
FROM goal 
WHERE teamid='GER'

#2 Show id, stadium, team1, team2 for just game 1012
SELECT id, stadium, team1,team2
FROM game
WHERE id=1012

#3 Modify it to show the player, teamid, stadium and mdate for every German goal.
SELECT player, teamid, stadium, mdate
FROM game 
JOIN goal 
ON (id=matchid and teamid='GER')

#4 Show the team1, team2 and player for every goal scored by a player called Mario
SELECT team1, team2, player
FROM game
JOIN goal
ON (id=matchid and player LIKE 'mario%')

#5 Show player, teamid, coach, gtime for all goals scored in the first 10 minutes
SELECT player, teamid, coach, gtime
FROM goal 
JOIN eteam
ON (teamid=id AND gtime<=10)

#8 Instead show the name of all players who scored a goal against Germany.
SELECT DISTINCT player
FROM goal
JOIN game
ON matchid = id 
WHERE((team1='GER' OR team2='GER') AND teamid!='GER')

#9 Show teamname and the total number of goals scored.
SELECT teamname, COUNT(*)
FROM eteam
JOIN goal 
ON id=teamid
GROUP BY teamname

#10 Show the stadium and the number of goals scored in each stadium.
SELECT stadium, count(gtime)
FROM game
JOIN goal
ON id=matchid
GROUP BY stadium

